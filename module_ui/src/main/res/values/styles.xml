<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--网络弹窗对话框样式-->
    <style name="style_dialog_loading" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 模糊 -->
    </style>


    <style name="LoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="style_t2_c3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t2_15</item>
        <item name="android:textColor">@color/c3_black</item>
    </style>

    <!--普通的dialog弹窗-->
    <style name="style_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <!--线条样式-->
    <style name="view_line_l2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/L2</item>
    </style>
    <!--app左上角返回样式-->
    <style name="style_app_back">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/global_default_M10</item>
        <item name="android:paddingRight">@dimen/global_default_M10</item>
        <item name="android:paddingTop">@dimen/global_default_M5</item>
        <item name="android:paddingLeft">@dimen/global_default_M10</item>
        <item name="android:paddingBottom">@dimen/global_default_M5</item>
    </style>

    <style name="BaseThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="lollipop">#FF2DD0CF</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--app一级标题-->
    <style name="style_app_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/c3_black</item>
        <item name="android:textSize">@dimen/text_size18</item>
    </style>


    <style name="style_app_title_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/global_default_M10</item>
        <item name="android:paddingLeft">@dimen/global_default_M5</item>
        <item name="android:paddingRight">@dimen/global_default_M5</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/b1_white</item>
        <item name="android:textSize">@dimen/text_size15</item>
    </style>


    <!--app正常文字样式，黑色-->
    <style name="style_t4_c3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/t4_11</item>
        <item name="android:textColor">@color/c3_black</item>
    </style>

    <style name="dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>
</resources>